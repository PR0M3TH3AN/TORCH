# TORCH Environment Variables
# Copy this file to .env and fill in the values for your deployment.

# ─── Dashboard ────────────────────────────────────────────────────────
# Basic Auth credentials for the dashboard (user:password format)
# TORCH_DASHBOARD_AUTH=admin:changeme

# ─── Configuration ────────────────────────────────────────────────────
# Path to torch-config.json (optional — overrides default lookup)
# TORCH_CONFIG_PATH=./torch-config.json

# ─── Agent Platform Detection ─────────────────────────────────────────
# Override automatic platform detection (jules | claude | codex | goose)
# AGENT_PLATFORM=
# AGENT_MODEL=

# Platform-specific API keys (used for automatic platform detection)
# CLAUDE_API_KEY=
# JULES_API_KEY=
# CODEX_API_KEY=
# GOOSE_API_KEY=

# ─── Nostr Lock Configuration ────────────────────────────────────────
# Comma-separated relay URLs (overrides config file)
# NOSTR_LOCK_RELAYS=wss://relay.damus.io,wss://nos.lol,wss://relay.primal.net

# Lock TTL in seconds (default: 7200)
# NOSTR_LOCK_TTL=7200

# Relay connection timeout in milliseconds (default: 8000)
# NOSTR_LOCK_TIMEOUT=8000

# Minimum relay quorum for successful publish (default: 1)
# NOSTR_LOCK_QUORUM=1

# ─── Memory Subsystem ────────────────────────────────────────────────
# Master toggle for the memory subsystem
# TORCH_MEMORY_ENABLED=false

# Individual memory feature flags
# TORCH_MEMORY_INGEST_ENABLED=false
# TORCH_MEMORY_RETRIEVAL_ENABLED=false
# TORCH_MEMORY_PRUNE_ENABLED=false
# TORCH_MEMORY_PRUNE_MODE=off

# ─── Telemetry (opt-in) ──────────────────────────────────────────────
# TELEMETRY=0
