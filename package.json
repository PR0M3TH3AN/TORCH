{
  "name": "torch-lock",
  "version": "0.1.0",
  "type": "module",
  "description": "TORCH standalone lock CLI and dashboard",
  "main": "src/lib.mjs",
  "bin": {
    "torch-lock": "./bin/torch-lock.mjs"
  },
  "files": [
    "bin/",
    "src/lib.mjs",
    "src/constants.mjs",
    "src/lock-ops.mjs",
    "src/ops.mjs",
    "src/dashboard.mjs",
    "src/roster.mjs",
    "src/torch-config.mjs",
    "src/relay-health.mjs",
    "src/prompts/",
    "src/docs/",
    "scripts/check-file-size.mjs",
    "scripts/check-innerhtml.mjs",
    "scripts/test-audit/",
    "scripts/memory/",
    "skills/",
    "dashboard/",
    "assets/",
    "torch-config.example.json",
    "README.md",
    "TORCH.md"
  ],
  "scripts": {
    "test": "npm run validate:scheduler && npm run test:integration:e2e && node --test test/*.test.mjs test/*.test.js",
    "test:unit:lock-backend": "node --test test/lock-ops.test.mjs test/lock-ops-publish-retry.test.mjs",
    "lock:check:daily": "node bin/torch-lock.mjs check --cadence daily",
    "lock:check:weekly": "node bin/torch-lock.mjs check --cadence weekly",
    "lock:list": "node bin/torch-lock.mjs list",
    "lock:lock": "node bin/torch-lock.mjs lock",
    "lock:health": "node bin/torch-lock.mjs health",
    "dashboard:serve": "node bin/torch-lock.mjs dashboard",
    "build": "node build.mjs",
    "lint": "eslint .",
    "lock:complete": "node bin/torch-lock.mjs complete",
    "validate:scheduler": "node scripts/validate-scheduler-roster.mjs && node scripts/validate-prompt-contract.mjs && node scripts/validate-scheduler-flow-parity.mjs && npm run validate:scheduler-failure-schema",
    "scheduler:daily": "node scripts/agent/run-scheduler-cycle.mjs daily",
    "scheduler:weekly": "node scripts/agent/run-scheduler-cycle.mjs weekly",
    "report:lock-reliability": "node scripts/agent/summarize-lock-reliability.mjs --since-days 30",
    "test:integration:e2e": "node --test test/scheduler-preflight-lock.e2e.test.mjs",
    "validate:scheduler-failure-schema": "node --test test/scheduler-lock-failure-schema.contract.test.mjs",
    "test:ci-resilience": "node --test test/lock-acquisition-resilience.integration.test.mjs",
    "test:extended-main": "npm run test:integration:e2e && npm run test:ci-resilience",
    "torch:memory:list": "node bin/torch-lock.mjs list-memories",
    "torch:memory:inspect": "node bin/torch-lock.mjs inspect-memory"
  },
  "dependencies": {
    "nostr-tools": "2.19.4",
    "ws": "8.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "eslint": "^10.0.0",
    "globals": "^17.3.0"
  }
}
