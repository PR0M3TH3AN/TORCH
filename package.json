{
  "name": "torch-lock",
  "version": "0.1.0",
  "type": "module",
  "description": "TORCH standalone lock CLI and dashboard",
  "main": "src/lib.mjs",
  "bin": {
    "torch-lock": "./bin/torch-lock.mjs"
  },
  "files": [
    "bin/",
    "src/lib.mjs",
    "src/torch-config.mjs",
    "src/prompts/",
    "src/docs/",
    "skills/",
    "dashboard/",
    "assets/",
    "torch-config.example.json",
    "README.md"
  ],
  "scripts": {
    "test": "node --test test/*.test.mjs",
    "lock:check:daily": "node bin/torch-lock.mjs check --cadence daily",
    "lock:check:weekly": "node bin/torch-lock.mjs check --cadence weekly",
    "lock:list": "node bin/torch-lock.mjs list",
    "lock:lock": "node bin/torch-lock.mjs lock",
    "dashboard:serve": "node bin/torch-lock.mjs dashboard",
    "build": "node build.mjs",
    "lint": "eslint ."
  },
  "dependencies": {
    "nostr-tools": "2.19.4",
    "ws": "8.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "globals": "^17.3.0"
  }
}
