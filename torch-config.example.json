{
  "nostrLock": {
    "namespace": "torch-example",
    "relays": [
      "wss://relay.damus.io",
      "wss://nos.lol",
      "wss://relay.primal.net"
    ],
    "ttlSeconds": 7200,
    "queryTimeoutMs": 30000,
    "publishTimeoutMs": 15000,
    "minSuccessfulRelayPublishes": 2,
    "minActiveRelayPool": 2,
    "relayFallbacks": [
      "wss://relay.snort.social",
      "wss://relay.nostr.band"
    ]
  },
  "dashboard": {
    "defaultCadenceView": "daily",
    "defaultStatusView": "active",
    "auth": "admin:password"
  },
  "scheduler": {
    "firstPromptByCadence": {
      "daily": "scheduler-update-agent",
      "weekly": "bug-reproducer-agent"
    },
    "handoffCommandByCadence": {
      "daily": "node torch/scripts/agent/run-selected-prompt.mjs",
      "weekly": "node torch/scripts/agent/run-selected-prompt.mjs"
    },
    "handoffPolicyByCadence": {
      "daily": {
        "maxAttempts": 2,
        "retryBackoffMs": 1000,
        "retryOnPatterns": [
          "stream disconnected",
          "timeout",
          "temporarily unavailable"
        ],
        "fallbackPlatform": "linux"
      },
      "weekly": {
        "maxAttempts": 2,
        "retryBackoffMs": 1000
      }
    },
    "runnerHealthCommandByCadence": {
      "daily": "command -v codex >/dev/null 2>&1",
      "weekly": "command -v codex >/dev/null 2>&1"
    },
    "memoryPolicyByCadence": {
      "daily": {
        "mode": "required",
        "retrieveCommand": "node torch/scripts/memory/retrieve.mjs",
        "storeCommand": "node torch/scripts/memory/store.mjs",
        "retrieveSuccessMarkers": [
          "MEMORY_RETRIEVED"
        ],
        "storeSuccessMarkers": [
          "MEMORY_STORED"
        ],
        "retrieveArtifacts": [
          ".scheduler-memory/latest/daily/retrieve.ok",
          ".scheduler-memory/latest/daily/retrieve.json"
        ],
        "storeArtifacts": [
          ".scheduler-memory/latest/daily/store.ok",
          ".scheduler-memory/latest/daily/store.json"
        ]
      },
      "weekly": {
        "mode": "required",
        "retrieveCommand": "node torch/scripts/memory/retrieve.mjs",
        "storeCommand": "node torch/scripts/memory/store.mjs",
        "retrieveSuccessMarkers": [
          "MEMORY_RETRIEVED"
        ],
        "storeSuccessMarkers": [
          "MEMORY_STORED"
        ],
        "retrieveArtifacts": [
          ".scheduler-memory/latest/weekly/retrieve.ok",
          ".scheduler-memory/latest/weekly/retrieve.json"
        ],
        "storeArtifacts": [
          ".scheduler-memory/latest/weekly/store.ok",
          ".scheduler-memory/latest/weekly/store.json"
        ]
      }
    },
    "paused": {
      "daily": [],
      "weekly": []
    }
  }
}
